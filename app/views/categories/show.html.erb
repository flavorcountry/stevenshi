<h1><%= @category.name %></h1>
<hr class="cat-sep">
<% @posts.each do |post| %>
	<div class="post">
		<h2><%= link_to post.title, post_path(post) %></h2>
		<small><%= post.created_at.strftime("%d %b. %Y") %> in <%= link_to post.category.name, category_path(post.category) %></small>
	</div>
<% end %>

<%= will_paginate @posts, next_label: "Next", previous_label: "Previous" %>