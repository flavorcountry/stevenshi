<%= form_for @post do |f| %>
<%= f.label :title %>
<br>
<%= f.text_field :title %>
<br>

<%= f.label :body %>
<br>
<%= f.text_area :body, rows: 5 %>
<br>

<%= f.label :category %>
<%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name, @post.category.id) %>
<br>
<%= f.label :password %>
<%= f.password_field :password %>
<br>
<%= f.submit %>


<% end %>