<div class="entry">
	<h1><%= @post.title %>
		<span class="tagline"><%= @post.created_at.strftime("%d %b. %Y") %> in
			<%= link_to @post.category.name, category_path(@post.category) %></span>
	</h1>
	<div>
		<%= simple_format @post.body.html_safe %>
	</div>

